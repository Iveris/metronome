<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.InnerShadow?>
<?import javafx.scene.effect.Reflection?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" maxHeight="250.0" maxWidth="250.0" onKeyPressed="#keyPressed" prefHeight="250.0" prefWidth="250.0" style="-fx-background-color: black; -fx-border-insets: 20;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.warneriveris.metronome.Controller">
   <children>
      <HBox alignment="CENTER" onKeyPressed="#keyPressed" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button fx:id="faster" alignment="CENTER" mnemonicParsing="false" onAction="#mouseClick" onKeyPressed="#keyPressed" opacity="0.91" prefHeight="20.0" prefWidth="20.0" style="-fx-background-color: linear-gradient(to bottom, #3d94f6 5%, #1e62d0 100%) linear-gradient(to bottom, #3d94f6 5%, #1e62d0 100%); -fx-border-color: #337fed#337fed #337fed#337fed;" text="+" textAlignment="JUSTIFY" textFill="#00f2ff">
               <HBox.margin>
                  <Insets right="25.0" />
               </HBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
               <effect>
                  <InnerShadow />
               </effect>
            </Button>
            <Label fx:id="BPM" alignment="CENTER" contentDisplay="CENTER" focusTraversable="false" onKeyPressed="#keyPressed" opacity="0.8" text="60" textAlignment="JUSTIFY" textFill="#00f2ff">
               <font>
                  <Font name="Silom" size="48.0" />
               </font>
               <HBox.margin>
                  <Insets left="10.0" right="10.0" />
               </HBox.margin>
               <effect>
                  <Reflection />
               </effect>
            </Label>
            <Button fx:id="slower" alignment="CENTER" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#mouseClick" onKeyPressed="#keyPressed" opacity="0.91" prefHeight="20.0" prefWidth="20.0" style="-fx-background-color: linear-gradient(to bottom, #3d94f6 5%, #1e62d0 100%) linear-gradient(to bottom, #3d94f6 5%, #1e62d0 100%); -fx-border-color: #337fed#337fed #337fed#337fed;" text="-" textAlignment="JUSTIFY" textFill="#00f2ff">
               <HBox.margin>
                  <Insets left="25.0" />
               </HBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
               <effect>
                  <InnerShadow />
               </effect>
            </Button>
         </children>
      </HBox>
      <HBox alignment="CENTER" maxHeight="100.0" maxWidth="200.0" minHeight="100.0" minWidth="200.0" onKeyPressed="#keyPressed" prefHeight="100.0" prefWidth="200.0">
         <VBox.margin>
            <Insets top="60.0" />
         </VBox.margin>
         <children>
            <Button fx:id="startStop" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#mouseClick" onKeyPressed="#keyPressed" opacity="0.91" prefHeight="30.0" prefWidth="115.0" style="-fx-background-color: linear-gradient(to bottom, #3d94f6 5%, #1e62d0 100%) linear-gradient(to bottom, #3d94f6 5%, #1e62d0 100%); -fx-border-color: #337fed#337fed #337fed#337fed;" text="PLAY" textAlignment="JUSTIFY" textFill="#00f2ff">
               <font>
                  <Font name="Silom" size="22.0" />
               </font>
               <HBox.margin>
                  <Insets left="10.0" right="10.0" />
               </HBox.margin>
               <effect>
                  <InnerShadow />
               </effect>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
